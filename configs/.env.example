# Copy this file to `.env` in the same folder before running Docker Compose.
# If you run `docker compose` from the repo root with `-f configs/docker-compose.yml`,
# place your `.env` at the repo root (Compose reads .env from the working directory).

# -----------------
# Network Configuration
# -----------------
NETWORK_ID=1337
CHAIN_ID=1337

# -----------------
# Node RPC Ports (host:container)
# The Go CLI targets 127.0.0.1:8545,8546,8547 by default.
# -----------------
NODE1_RPC_PORT=8545
NODE2_RPC_PORT=8546
NODE3_RPC_PORT=8547

# -----------------
# Metrics Ports
# prometheus.yml scrapes geth-nodeX:6060 in the Docker network.
# Keep all internal container ports at 6060 unless you also update prometheus.yml.
# -----------------
NODE1_METRICS_PORT=6060
NODE2_METRICS_PORT=6060
NODE3_METRICS_PORT=6060

# -----------------
# Mining Configuration (dev)
# -----------------
MINER_THREADS=1
ENABLE_MINING=true
# Used as etherbase when mining/sealing (dev only)
ETHERBASE_ADDRESS=0x7df9a875a174b3bc565e6424a0050ebc1b2d1d82

# -----------------
# API Configuration
# -----------------
HTTP_API=eth,net,web3,admin,txpool
HTTP_CORS_DOMAIN=*

# -----------------
# Monitoring Ports (host ports)
# -----------------
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
CUSTOM_EXPORTER_PORT=9545

# -----------------
# Grafana Credentials (dev only; change in real use!)
# -----------------
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin
